<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popupfind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="4"
    android:background="@drawable/back10">

    <Button
        android:id="@+id/level2"
        android:layout_width="231dp"
        android:layout_height="54dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#3862C1EC"
        android:fontFamily="@font/knewave"
        android:foregroundTint="#5BA7E4"
        android:text="Back to levels"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loose" />

    <TextView
        android:id="@+id/loose"
        android:layout_width="294dp"
        android:layout_height="194dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/knewave"
        android:gravity="center"
        android:text="You lost, Try again you will do better next time !"
        android:textColor="#738c93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jum2" />

    <TextView
        android:id="@+id/jum4"
        android:layout_width="247dp"
        android:layout_height="65dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/knewave"
        android:text="You Lost..."
        android:textColor="#738c93"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jum2"
        android:layout_width="247dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/knewave"
        android:text="Jumble Game"
        android:textColor="#738c93"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="532dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>