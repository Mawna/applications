<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38896CCF"
    tools:context=".find">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="424dp"
        android:layout_height="192dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/course" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="277dp"
        android:layout_height="217dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nbp2"
        android:layout_width="77dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="164dp"
        android:fontFamily="@font/bevan"
        android:foregroundTint="#00FFFFFF"
        android:text="/10 000"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nbp" />

    <TextView
        android:id="@+id/nbp3"
        android:layout_width="244dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="84dp"
        android:fontFamily="@font/bevan"
        android:foregroundTint="#00FFFFFF"
        android:gravity="center"
        android:text="Start a new activity"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/nbp"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="116dp"
        android:fontFamily="@font/bevan"
        android:foregroundTint="#00FFFFFF"
        android:gravity="center"
        android:text="0"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@+id/progressBar" />

    <ImageButton
        android:id="@+id/info"
        android:layout_width="37dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/nbp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/run" />

    <!-- <Button
         android:id="@+id/add"
         android:layout_width="371dp"
         android:layout_height="72dp"
         android:layout_marginTop="15dp"
         android:layout_marginEnd="24dp"
         android:backgroundTint="#38896CCF"
         android:fontFamily="@font/bevan"
         android:foregroundTint="#5BA7E4"
         android:includeFontPadding="false"
         android:text="add waypoint"
         android:textSize="18sp"
         android:textStyle="bold"
         app:cornerRadius="30dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/nbp3"
         app:layout_constraintVertical_bias="0.0" />-->

    <Button
        android:id="@+id/map2"
        android:layout_width="371dp"
        android:layout_height="72dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#38896CCF"
        android:fontFamily="@font/bevan"
        android:foregroundTint="#5BA7E4"
        android:includeFontPadding="false"
        android:text="map"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nbp3" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />
    />
</androidx.constraintlayout.widget.ConstraintLayout>